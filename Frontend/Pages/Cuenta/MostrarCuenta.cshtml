@page
@model Frontend.Pages.MostrarCuentaModel
@{
}
<div class="justify-content-center text-center">
    <h1>Cuenta Cliente</h1>
    <br>
</div>
<div>
    <div>
        <a asp-page="CrearCliente">Registrar Pago</a>
    </div>
    <br><br>
    <table class="table">
        <tr>
            <th>CuentaId</th>
            <th>Titular</th> 
           <!--  <th>Apellidos</th> -->
            <th>Ahorro</th>
            <th>Intereses</th>
            <th>Saldo Total</th>
        </tr>
        @foreach (var cuenta in Model.Cuentas)
        {
            <tr>
                <td>@cuenta.CuentaId</td>
                <td>@cuenta.Titular</td>
                <td>@cuenta.Ahorro</td>
                <td>@cuenta.Intereses</td>
                <td>@cuenta.SaldoTotal</td>
                <td>
                    <a class="btn btn-primary" asp-page="./DetallesCliente" asp-route-id="@cuenta.CuentaId"><i class="fa fa-circle"></i></a>


                </td>
                <td>
                    <a class="btn btn-danger" asp-page="./EliminarCliente" asp-route-id="@cuenta.CuentaId"><i class="fa fa-trash"></i></a>

                </td>
                <td>
                    <a class="btn btn-success" asp-page="./EditarCliente" asp-route-id="@cuenta.CuentaId"><i class="fa fa-pencil"></i></a>

                </td>
            </tr>
        }
    </table>
</div>