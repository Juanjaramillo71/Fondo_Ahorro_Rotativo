@page
@model Frontend.Pages.LoginClienteModel
@{
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header text-center">
                    <h1>FIDALIA</h1>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label for="cedula">Identificación</label>
                             <div class="input-container">
                                    <input type="text" id="cedula" name="cedulaU" placeholder="Ingrese su identificación" class="form-control" required>
                                    <i class="fas fa-user fa-lg"></i>
                                </div>
                        </div>
                        <div class="form-group">
                            <label for="contrasena">Contraseña</label>
                            <div class="input-container">
                                    <input type="password" id="contrasena" name="contrasenaU" placeholder="Ingrese su contraseña" class="form-control" required>
                                    <i class="fas fa-lock fa-lg ml-2"></i>
                            </div>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                        </div>
                        <div class="form-group text-center">
                            <a href="#">¿Olvidó su contraseña?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

